{
    "manifest_version": 2,
    "name": "Vokal",
    "version": "0.3",
    "description": "vkontakte music downloader",
    "browser_action": {
        "default_icon": "ico/24.png"
    },
    "icons": {
        "128": "ico/128.png",
        "24": "ico/24.png"
    },
    "permissions": ["*://*.vk.me/*", "*://vk.com/*", "background", "downloads", "storage"],
    "content_scripts": [
        {
            "js": [ "vendor/zepto.js", "content.js" ],
            "css": ["content.css"],
            "matches": [ "*://vk.com/*" ]
        }
    ],

    "background": {
        "scripts": ["vendor/zepto.js", "background.js"]
    },

    "options_page": "options.html"
}